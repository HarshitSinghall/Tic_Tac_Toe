<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/r_button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="button_click"
            android:tag="4" />
    </RelativeLayout>
    //btn 5


    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/div_3"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/div_1">

        <ImageView
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="button_click"
            android:tag="4" />
    </RelativeLayout>
    //btn 1

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/div_3"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/div_1">

        <ImageView
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="button_click"
            android:tag="4" />
    </RelativeLayout>
    //btn 2

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/div_3"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/div_2">

        <ImageView
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="button_click"
            android:tag="4" />
    </RelativeLayout>
    //btn 3

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/div_3"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/div_1">

        <ImageView
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="button_click"
            android:tag="4" />
    </RelativeLayout>
    //btn 4

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/div_3"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/div_2">

        <ImageView
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="button_click"
            android:tag="4" />
    </RelativeLayout>
    //btn 6

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/div_4"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/div_1">

        <ImageView
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="button_click"
            android:tag="4" />
    </RelativeLayout>
    //btn 7

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/div_4"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/div_1">

        <ImageView
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="button_click"
            android:tag="4" />
    </RelativeLayout>
    //btn 8

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/div_4"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/div_2">

        <ImageView
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="button_click"
            android:tag="4" />
    </RelativeLayout>
    //btn 9


    <RelativeLayout
        android:id="@+id/div_3"
        android:layout_width="350dp"
        android:layout_height="4dp"
        android:layout_above="@id/r_button5"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@color/teal_200" />

    <RelativeLayout
        android:id="@+id/div_1"
        android:layout_width="4dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/r_button5"
        android:background="@color/teal_200" />

    <RelativeLayout
        android:id="@+id/div_2"
        android:layout_width="4dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/r_button5"
        android:background="@color/teal_200" />

    <RelativeLayout
        android:id="@+id/div_4"
        android:layout_width="350dp"
        android:layout_height="4dp"
        android:layout_below="@id/r_button5"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@color/teal_200" />

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/teal_700"
        android:text="RESET"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/xscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X score :- 0"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/oscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O score :- 0"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </LinearLayout>


</RelativeLayout>